{
  "name": "spacegame",
  "version": "0.4.0",
  "private": true,
  "dependencies": {
    "localforage": "1.7.x",
    "pixi.js": "5.0.x",
    "react": "16.4.x",
    "react-dom": "16.4.x",
    "react-dom-factories": "1.0.x",
    "react-motion": "0.5.x",
    "requirejs": "2.3.x",
    "requirejs-plugins": "1.0.x"
  },
  "devDependencies": {
    "@types/react": "16.x",
    "@types/react-dom": "16.x",
    "@types/react-dom-factories": "1.x",
    "@types/react-motion": "0.0.x",
    "@types/requirejs": "^2.1.31",
    "concat-with-sourcemaps": "1.1.x",
    "cpr": "3.0.x",
    "glob": "7.1.x",
    "http-server": "0.11.x",
    "less": "2.7.x",
    "mkdirp": "0.5.x",
    "ts-loader": "5.3.x",
    "tslint": "5.11.x",
    "typescript": "3.5.x"
  },
  "scripts": {
    "postinstall": "npm run copy-libs && npm run copy-assets && npm run compile-ui-module-css && npm run replace-pixi-typedefs",

    "build": "tsc -b --verbose && node scripts/build/bundleDefaultModules",

    "compile-ui-module-css": "lessc modules/defaultui/css/main.less dist/modules/defaultui/css/main.css",

    "copy-libs": "node scripts/copy_libs.js",
    "copy-assets": "npm run copy-ui-assets && npm run copy-emblems-assets && npm run copy-painting-portraits-assets && npm run copy-space-assets",

    "replace-pixi-typedefs": "node scripts/replace_pixi_typedefs.js",

    "copy-ui-assets": "node scripts/copy_ui_assets.js",
    "copy-emblems-assets": "mkdirp dist/modules/defaultemblems/img && cpr modules/defaultemblems/img dist/modules/defaultemblems/img -o",
    "copy-painting-portraits-assets": "node scripts/copy_painting_portraits_assets.js",

    "copy-space-assets": "npm run copy-space-battlevfx-assets && npm run copy-space-buildings-assets && npm run copy-space-items-assets && npm run copy-space-mapmodes-assets && npm run copy-space-resources-assets && npm run copy-space-units-assets",
    "copy-space-battlevfx-assets": "mkdirp dist/modules/space/battlevfx/img && cpr modules/space/battlevfx/img dist/modules/space/battlevfx/img -o",
    "copy-space-buildings-assets": "mkdirp dist/modules/space/buildings/img && cpr modules/space/buildings/img dist/modules/space/buildings/img -o",
    "copy-space-items-assets": "mkdirp dist/modules/space/items/img && cpr modules/space/items/img dist/modules/space/items/img -o",
    "copy-space-mapmodes-assets": "mkdirp dist/modules/space/mapmodes/img && cpr modules/space/mapmodes/img dist/modules/space/mapmodes/img -o",
    "copy-space-resources-assets": "mkdirp dist/modules/space/resources/img && cpr modules/space/resources/img dist/modules/space/resources/img -o",
    "copy-space-units-assets": "mkdirp dist/modules/space/units/img && cpr modules/space/units/img dist/modules/space/units/img -o",

    "start": "http-server --port 9001 -o http://127.0.0.1:9001/",

    "lint": "tslint \"{src,modules}/**/*.ts\"",
    "lintfix": "tslint \"{src,modules}/**/*.ts\" --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/giraluna/spacegame.git"
  }
}
