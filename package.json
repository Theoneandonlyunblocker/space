{
  "name": "spacegame",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "localforage": "1.7.x",
    "pixi.js": "4.8.2",
    "react": "16.4.x",
    "react-dom": "16.4.x",
    "react-dom-factories": "1.0.x",
    "react-motion": "0.5.x",
    "requirejs": "2.3.x",
    "requirejs-plugins": "1.0.x"
  },
  "devDependencies": {
    "@types/pixi.js": "4.8.2",
    "@types/react": "16.x",
    "@types/react-dom": "16.x",
    "@types/react-dom-factories": "1.x",
    "@types/react-motion": "0.0.x",
    "@types/requirejs": "^2.1.31",
    "less": "2.7.x",
    "mkdirp": "0.5.x",
    "ncp": "2.0.x",
    "ts-loader": "5.3.x",
    "tslint": "5.11.x",
    "typescript": "3.4.x"
  },
  "scripts": {
    "build": "tsc -b --verbose && python scripts/prefix_json_amd_imports.py && npm run copy-libs && npm run build-ui-module-extras && npm run build-misc-module-extras && npm run build-space-module-extras",

    "build-ui-module-extras": "lessc modules/defaultui/css/main.less dist/modules/defaultui/css/main.css && npm run copy-ui-assets",
    "copy-ui-assets": "node scripts/copy_ui_assets.js",

    "build-misc-module-extras": "npm run copy-emblems-assets && npm run copy-painting-portraits-assets",
    "copy-emblems-assets": "ncp modules/defaultemblems/img dist/modules/defaultemblems/img",
    "copy-painting-portraits-assets": "node scripts/copy_painting_portraits_assets.js",

    "build-space-module-extras": "npm run copy-space-battlesfx-assets && npm run copy-space-buildings-assets && npm run copy-space-items-assets && npm run copy-space-mapmodes-assets && npm run copy-space-resources-assets && npm run copy-space-units-assets",
    "copy-space-battlesfx-assets": "ncp modules/space/battlesfx/img dist/modules/space/battlesfx/img",
    "copy-space-buildings-assets": "ncp modules/space/buildings/img dist/modules/space/buildings/img",
    "copy-space-items-assets": "ncp modules/space/items/img dist/modules/space/items/img",
    "copy-space-mapmodes-assets": "ncp modules/space/mapmodes/img dist/modules/space/mapmodes/img",
    "copy-space-resources-assets": "ncp modules/space/resources/img dist/modules/space/resources/img",
    "copy-space-units-assets": "ncp modules/space/units/img dist/modules/space/units/img",

    "copy-libs": "node scripts/copy_libs.js",


    "lint": "tslint \"{src,modules}/**/*.ts\"",
    "lintfix": "tslint \"{src,modules}/**/*.ts\" --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/giraluna/spacegame.git"
  }
}
